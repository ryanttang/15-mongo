<div class="container">
    <div class="jumbotron">
        <h1>Scraped News</h1>
            <h3>Players List</h3>
            <a href="/scrape"> <button type="button" class="btn btn-danger scrape">Scrape!</button></a>
    </div>
    <div class="article-container">
        {{#each Article}}
        <div class="row">

            <div class="panel panel-primary">
                <div class="panel-heading">{{this.title}}
                    <a href="/notes/{{this.id}}">
                    <button type="button" class="btn btn-warning save-article">See Notes</button></a>
                </div>
                <div class="panel-body">
                    <a href="https://www.nba.com/{{this.link}}" target="_blank"> {{this.link}}</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>

    <!-- Footer -->
    <footer class="footer container">
        <a href="/">Home</a>
    </footer>
</div>